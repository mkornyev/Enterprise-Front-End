<%= render "partials/header" %>

<div class="container">
  <div class="row no-gutters">
    <div class="col pl-3 pt-5">
      <!-- Details Pane --> 
      <h4 class="lead">Order Details:</h4><br>

      <fieldset class="border mt-4">
    		<legend class="pl-3"><%= "Recipient: " + Address.find(@order.address_id).recipient %></legend>
    		<div class="px-2 py-2">
    		<%= "Thanks for being a Baking Factory customer since " + Customer.find(@order.customer_id).created_at.strftime('%Y') + "." %><br>
    		</div>
	  </fieldset><br>

	  <!-- Orders Pane --> 
	  <h4 class="lead">Order History:</h4><br>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          <tbody>
            <!-- Single Order Rows 
              <tr>
                <td><%= @order.date.strftime('%m/%d/%y') %></td>
                <td><%= number_to_currency(@order.grand_total) %></td>
              </tr> -->
            <!-- Order Rows --> 
            <% @previous_orders.each do |prev_order| %>
              <tr>
                <td><%= link_to prev_order.date.strftime('%m/%d/%y'), order_path(prev_order) %></td>
                <td><%= number_to_currency(prev_order.grand_total) %></td>
              </tr>
            <% end %>  
          </tbody>
        </table>

    </div>
  </div>
</div>

<%= render "partials/footer" %>