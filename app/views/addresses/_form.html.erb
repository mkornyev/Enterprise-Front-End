<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :customer_id, collection: Customer.active.alphabetical.to_a, include_blank: true %>
      <%= f.input :is_billing, label_html: { class: 'active' } %>
      <%= f.input :recipient, label_html: { class: 'active' } %>
      <%= f.input :street_1, label_html: { class: 'active' } %>
      <%= f.input :street_2, label_html: { class: 'active' } %>
      <%= f.input :city, label_html: { class: 'active' } %>
      <%= f.input :state, collection: Address::STATES_LIST %>
      <%= f.input :zip, label_html: { class: 'active' } %>
      <%= f.input :active, label_html: { class: 'active' } %>
    </div>
  </div>
  <div class="row">
    <div class="btn btn-primary btn-sm active">
      <%= f.button :submit, class: "text-white" %>
    </div>
  </div>
<% end %>